{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceRoot": "src",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "$components/*": [
        "src/components/*"
      ],
      "$screens/*": [
        "src/screens/*"
      ],
      "$assets/*": [
        "src/assets/*"
      ],
      "$utils/*": [
        "src/utils/*"
      ],
      "$hooks/*": [
        "src/hooks/*"
      ],
      "$modals/*": [
        "src/modals/*"
      ]
    }
  }
}